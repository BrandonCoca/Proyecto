@model IEnumerable<Proyecto.Models.Comentarios>

@{
    ViewData["Title"] = "Comentarios";
}

<h1>Comentarios</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContenidoComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaComentario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContenidoComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaComentario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>


<form asp-action="DescargarPDF" asp-controller="Comentarios">
    <button class="btn btn-success" type="submit">
        Generar reporte en formatoPDF
    </button>
</form>

